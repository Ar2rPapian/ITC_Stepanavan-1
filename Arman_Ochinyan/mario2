#include <stdio.h>


		
int main(){
	int a=26;
	printf("a = ");
    scanf("%d", &a);
   
    while (a>23 || a<(-1))
    {
        printf("a = ");
        scanf("%d", &a);

    }
	 		char x = ' ';
	 		char y = '#';
	 		char z = ' ';
	 
	 for (int i = 1;i < a+1;++i){
	 	
	 					 
	    for (int j = 0;j < (a-i);++j){
	    	printf("%c",x);
	 	}
	 	

	    for (int k = (a-i);k<a;++k){
	 	    printf("%c",y);
	 	}
	 	for (int h = 0;h < (a+i);++h){
	 		
	    	printf("%c",x);
	 	}
printf("\n");
	 }
return 0;
	}
