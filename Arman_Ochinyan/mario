#include <stdio.h>


		
int main(){
	int a=26;
   
    while (a>23 || a<(-1))
    {
        printf("a = ");
        scanf("%d", &a);

    };
	 		char x = ' ';
	 		char y = '#';

	 
	 for (int i = 0;i < a;++i){
	 	
	 					 
	    for (int j = 0;j < (a-i-1);--j){
	    	printf("%c\n",x);
	 	}


	    for (int k = 0;k < a;++k){
	 	    printf("%c\n",y);
	 	}

	 }

	}
