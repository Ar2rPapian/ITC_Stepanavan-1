#include <stdio.h>


		
int main(){
	int a=26;
	printf("a = ");
        scanf("%d", &a);
   
    while (a>23 || a<(-1))
    {
        printf("a = ");
        scanf("%d", &a);

    };
	 		char x = ' ';
	 		char y = '#';

	 
	 for (int i = 0;i < a;++i){
	 	
	 					 
	    for (int j = 0;j < (a-i-1);++j){
	    	printf("%c\n",x);
	 	}


	    for (int k = i;k < a;++k){
	 	    printf("%c\n",y);
	 	}
	   printf("\n");
	 }

	}
